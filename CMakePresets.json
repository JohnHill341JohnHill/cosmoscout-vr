{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_UNITY_BUILD": "On",
        "COSMOSCOUT_USE_PRECOMPILED_HEADERS": "On",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "vs17",
      "hidden": true,
      "generator": "Visual Studio 15 2017",
      "architecture": "Win64"
    },
    {
      "name": "vs19",
      "hidden": true,
      "generator": "Visual Studio 16 2019",
      "architecture": "x64"
    },
    {
      "name": "vs22",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    },
    {
      "name": "make",
      "hidden": true,
      "generator": "Unix Makefiles"
    },
    {
      "name": "windows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-release",
      "hidden": true,
      "inherits": "windows",
      "binaryDir": "${sourceDir}/build/windows-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/windows-Release",
        "COSMOSCOUT_EXTERNALS_DIR": "${sourceDir}/install/windows-externals-Release"
      }
    },
    {
      "name": "windows-debug",
      "hidden": true,
      "inherits": "windows",
      "binaryDir": "${sourceDir}/build/windows-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/windows-Debug",
        "COSMOSCOUT_EXTERNALS_DIR": "${sourceDir}/install/windows-externals-Debug"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "hidden": true,
      "inherits": "linux",
      "binaryDir": "${sourceDir}/build/linux-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/linux-Release",
        "COSMOSCOUT_EXTERNALS_DIR": "${sourceDir}/install/linux-externals-Release"
      }
    },
    {
      "name": "linux-debug",
      "hidden": true,
      "inherits": "linux",
      "binaryDir": "${sourceDir}/build/linux-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/linux-Debug",
        "COSMOSCOUT_EXTERNALS_DIR": "${sourceDir}/install/linux-externals-Debug"
      }
    },
    {
      "name": "windows-ninja-release",
      "inherits": ["base", "ninja", "windows-release"]
    },
    {
      "name": "windows-ninja-debug",
      "inherits": ["base", "ninja", "windows-debug"]
    },
    {
      "name": "windows-vs17-release",
      "inherits": ["base", "vs17", "windows-release"]
    },
    {
      "name": "windows-vs17-debug",
      "inherits": ["base", "vs17", "windows-debug"]
    },
    {
      "name": "windows-vs19-release",
      "inherits": ["base", "vs19", "windows-release"]
    },
    {
      "name": "windows-vs19-debug",
      "inherits": ["base", "vs19", "windows-debug"]
    },
    {
      "name": "windows-vs22-release",
      "inherits": ["base", "vs22", "windows-release"]
    },
    {
      "name": "windows-vs22-debug",
      "inherits": ["base", "vs22", "windows-debug"]
    },
    {
      "name": "linux-ninja-release",
      "inherits": ["base", "ninja", "linux-release"]
    },
    {
      "name": "linux-ninja-debug",
      "inherits": ["base", "ninja", "linux-debug"]
    },
    {
      "name": "linux-make-release",
      "inherits": ["base", "make", "linux-release"]
    },
    {
      "name": "linux-make-debug",
      "inherits": ["base", "make", "linux-debug"]
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "hidden": true,
      "targets": "install"
    },
    {
      "name": "build-windows",
      "hidden": true,
      "inherits": "build-base",
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "$env{NUMBER_OF_PROCESSORS}"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "build-linux",
      "hidden": true,
      "inherits": "build-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-ninja-release",
      "inherits": "build-windows",
      "configurePreset": "windows-ninja-release",
      "configuration": "Release"
    },
    {
      "name": "windows-ninja-debug",
      "inherits": "build-windows",
      "configurePreset": "windows-ninja-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs17-release",
      "inherits": "build-windows",
      "configurePreset": "windows-vs17-release",
      "configuration": "Release"
    },
    {
      "name": "windows-vs17-debug",
      "inherits": "build-windows",
      "configurePreset": "windows-vs17-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs19-release",
      "inherits": "build-windows",
      "configurePreset": "windows-vs19-release",
      "configuration": "Release"
    },
    {
      "name": "windows-vs19-debug",
      "inherits": "build-windows",
      "configurePreset": "windows-vs19-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs22-release",
      "inherits": "build-windows",
      "configurePreset": "windows-vs22-release",
      "configuration": "Release"
    },
    {
      "name": "windows-vs22-debug",
      "inherits": "build-windows",
      "configurePreset": "windows-vs22-debug",
      "configuration": "Debug"
    },
    {
      "name": "linux-ninja-release",
      "inherits": "linux-windows",
      "configurePreset": "linux-ninja-release",
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-debug",
      "inherits": "build-linux",
      "configurePreset": "linux-ninja-debug",
      "configuration": "Debug"
    },
    {
      "name": "linux-make-release",
      "inherits": "linux-windows",
      "configurePreset": "linux-make-release",
      "configuration": "Release"
    },
    {
      "name": "linux-make-debug",
      "inherits": "build-linux",
      "configurePreset": "linux-make-debug",
      "configuration": "Debug"
    }
  ]
}